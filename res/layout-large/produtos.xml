<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtprodutos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/tituloProdutos"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/tituloTablet" />
       
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal" >

                <EditText
                    android:id="@+id/etProcurarProduto"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="20dp"
                    android:ems="10"
                    android:hint="Digite o nome do Produto" />

                <Button
                    android:id="@+id/btnProcurarProduto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/ic_action_search"
                    android:textColorLink="#8FD1FF"
                    android:textSize="20sp" />

        </LinearLayout>

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="690dp" >
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:gravity="bottom|center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnVoltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_back"
            android:text="voltar"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btnNovidades"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_novidades"
            android:text="Novidades"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btnPromocoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_promocoes"
            android:text="Promoções"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btnReservas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_reservas"
            android:text="Reservas"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btnCheckIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_checkin"
            android:text="Check In"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btnContatos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_contato"
            android:freezesText="false"
            android:text="Contato"
            android:textSize="10sp" />

    </LinearLayout>

</LinearLayout>
