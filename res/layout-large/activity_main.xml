<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="90dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imglogo"
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:layout_gravity="center"
            android:layout_weight="0.57"
            android:src="@drawable/appfidelidade" />

        <Button
            android:id="@+id/btnVoltar"
            android:layout_width="211dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:drawableLeft="@drawable/icon_novidades"
            android:text="@string/novidades"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnProdutos"
            android:layout_width="211dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/icon_produtos"
            android:text="@string/produtos"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnPromocoes"
            android:layout_width="211dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/icon_promocoes"
            android:text="@string/promocoes"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnReservas"
            android:layout_width="211dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/icon_reservas"
            android:text="@string/reservas"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnCheckIn"
            android:layout_width="211dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/icon_checkin"
            android:text="@string/checkin"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnContatos"
            android:layout_width="211dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/icon_contato"
            android:freezesText="false"
            android:text="@string/contato"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>