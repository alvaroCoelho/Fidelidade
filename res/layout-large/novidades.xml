<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#FFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtprodutos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/tituloNovidades"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/tituloTablet" />

    </LinearLayout>

    <ListView
        android:id="@+id/listViewNovidades"
        android:layout_width="match_parent"
        android:layout_height="770dp"
        android:layout_marginTop="20dp" >

    </ListView>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_gravity="bottom|center"
         android:gravity="bottom|center"
         android:orientation="horizontal" >

        <Button
            android:id="@+id/btnVoltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_back"
            android:text="voltar"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btnProdutos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_produtos"
            android:text="Produtos"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btnPromocoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_promocoes"
            android:text="Promoções"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btnReservas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_reservas"
            android:text="Reservas"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btnCheckIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_checkin"
            android:text="Check In"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btnContatos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_contato"
            android:freezesText="false"
            android:text="Contato"
            android:textSize="10sp" />

    </LinearLayout>

</LinearLayout>
